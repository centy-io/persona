{
  "name": "@centy/persona",
  "version": "0.1.0",
  "description": "Persona CLI by Centy",
  "license": "MIT",
  "author": "Centy",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/centy-io/persona.git"
  },
  "homepage": "https://github.com/centy-io/persona#readme",
  "bugs": {
    "url": "https://github.com/centy-io/persona/issues"
  },
  "keywords": [
    "centy",
    "persona",
    "cli",
    "ux",
    "user-story"
  ],
  "engines": {
    "node": ">=18.0.0"
  },
  "packageManager": "pnpm@10.30.2",
  "bin": {
    "persona": "dist/index.js"
  },
  "main": "./dist/index.js",
  "exports": {
    ".": "./dist/index.js"
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "lint:spell": "cspell \"**/*.{ts,md,json}\"",
    "prepublishOnly": "pnpm run build",
    "prepare": "husky"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.4.2",
    "@commitlint/config-conventional": "^20.4.2",
    "@types/node": "^25.3.0",
    "@vitest/coverage-v8": "^4.0.18",
    "cspell": "^9.7.0",
    "eslint": "^9.39.3",
    "eslint-config-agent": "^2.0.1",
    "eslint-import-resolver-typescript": "^4.4.4",
    "husky": "^9.1.7",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0",
    "vitest": "^4.0.18"
  },
  "oclif": {
    "bin": "persona",
    "dirname": "persona",
    "commands": "./dist/commands"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@oclif/core": "^4.8.1"
  }
}
